@layout MainLayout
@page "/"

<PageTitle>Lex Designs</PageTitle>
<MudContainer MaxWidth="MaxWidth.Large" Class="mt-10 container">
  <MudPaper Elevation="3" Outlined="true" Class="main-content" style="@mainContentBackgroundImage" MinHeight="200px"
    MinWidth="200px">
    <div Class="right-content">
      <h1>Lex Grunewald</h1>
      <p>Front-end developer with an eye for beauty, a passion for usability and an insatiable thirst for knowledge. A
        <span class="projects link">Jack of All Trades</span>, <span class="about-me link">Taurus moon</span> and <span
          class="text-based-adventure-game link">fantasy novel lover</span>.
      </p>
    </div>
    <div Class="left-content">
      <img src="" alt="lex-photo">
      <button>DOWNLOAD RESUME</button>
    </div>
  </MudPaper>

  <MudStack Spacing="16" Row="true" Class="mt-7" AlignItems="AlignItems.Center" Justify="Justify.Center">
    <MudPaper Class="pa-3" style="@mainContentBackgroundColor" @onclick="OnProjectDetailClick">
      <h2>VIVE</h2>
      <img src="" alt="">
    </MudPaper>
    <MudPaper Class="pa-3" style="@mainContentBackgroundColor">
      <h2>Aviation Resources</h2>
      <img src="" alt="">
    </MudPaper>
    <MudPaper Class="pa-3" style="@mainContentBackgroundColor">
      <h2>Helia</h2>
      <img src="" alt="">
    </MudPaper>
  </MudStack>


</MudContainer>

@code {
  [Inject] public LayoutService LayoutService { get; set; }
  [Inject] public NavigationManager NavigationManager { get; set; }

  protected string mainContentBackgroundColor { get; set; }
  protected string mainContentBackgroundImage { get; set; }

  protected override void OnInitialized()
  {
    base.OnInitialized();
    mainContentBackgroundColor = $"background-color: {LayoutService.CurrentTheme.Palette.Secondary.Value};";
    mainContentBackgroundImage = "background-image: url(/images/abstract.png)";
    LayoutService.MenuLabel = "home";

  }

  protected void OnProjectDetailClick()
  {
    NavigationManager.NavigateTo("/projects", forceLoad: false);
  }



}

